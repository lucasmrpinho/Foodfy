{% extends "layouts.njk" %}

    {% block head %}

        <title>Foodfy - Receita</title>
        
    {% endblock %}

{% block content %}

    <div class="wrapper-receitas">
        <div class="wrapper-receitas-container">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
        </div>
        <div class="wrapper-receitas-titulo">
            <h1>{{recipe.title}}<h1>
            <p>{{recipe.author}}<p>
        </div>
    </div>

    <div class = "ingredientes">
        <h2>Ingredientes<h2>
        <ul>
            {% for ingrediente in recipe.ingredients %}
            <li>{{ingrediente}}<li>
            {% endfor %}
        <ul>
    </div>

    <div class = "modo-de-preparo">
        <h2>Modo de preparo<h2>
        <ul>
            {% for etapa in recipe.preparation %}
            <li>{{etapa}}<li>
            {% endfor %}
        <ul>
    </div>

    <div class = "info-adicional">
        <p>{{recipe.information}}<p>
    </div>

{% endblock %}